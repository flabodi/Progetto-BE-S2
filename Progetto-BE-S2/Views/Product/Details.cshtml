@model Progetto_BE_S2.Models.Product
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="product-detail my-4">
    <h2>@Model.Name</h2>
    <img src="@Model.CoverImage" alt="@Model.Name" class="img-fluid my-3 w-25" />
    <p class="price"><strong>Prezzo:</strong> @Model.Price.ToString("C")</p>
    <p class="description my-3"><strong>Descrizione:</strong> @Model.Description</p>
    <div class="additional-images my-3">
        <img src="@Model.AdditionalImage1" alt="@Model.Name - immagine 1" class=" mr-2 w-25" />
        <img src="@Model.AdditionalImage2" alt="@Model.Name - immagine 2" class=" w-25 ms-4" />
    </div>
    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary mt-3">Torna alla vetrina</a>
</div>
